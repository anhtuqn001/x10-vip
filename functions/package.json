{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "env && firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "env && firebase deploy --only functions",
    "emulators": "firebase emulators:start --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@google-cloud/logging": "^0.7.1",
    "stripe": "^11.2.0",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.3.0",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
